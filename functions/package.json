{
  "name": "functions",
  "version": "1.0.0",
  "description": "Funci√≥n para analizar estados de cuenta con Gemini",
  "scripts": {
    "start": "functions-framework --target=getTotalAmount",
    "predeploy": "node pre-deploy.mjs",
    "deploy": "gcloud functions deploy getTotalAmount --gen2 --runtime=nodejs22 --region=us-central1 --source=. --entry-point=getTotalAmount --trigger-http --allow-unauthenticated",
    "deploy:prod": "gcloud functions deploy getTotalAmount --gen2 --runtime=nodejs22 --region=us-central1 --source=. --entry-point=getTotalAmount --trigger-http --allow-unauthenticated --max-instances=10 --memory=512MB --timeout=60s",
    "logs": "gcloud functions logs read getTotalAmount --region=us-central1 --limit=50",
    "logs:live": "gcloud functions logs read getTotalAmount --region=us-central1 --limit=50 --format='value(log)' --follow",
    "describe": "gcloud functions describe getTotalAmount --region=us-central1 --gen2",
    "url": "gcloud functions describe getTotalAmount --region=us-central1 --gen2 --format='value(serviceConfig.uri)'",
    "delete": "gcloud functions delete getTotalAmount --region=us-central1 --gen2"
  },
  "type": "module",
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "functions": {
    "runtime": "nodejs22"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.0.0",
    "@google-cloud/firestore": "^7.0.0",
    "@google-cloud/storage": "^7.0.0",
    "@google-cloud/vertexai": "^0.5.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
